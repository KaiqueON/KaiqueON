Programção - Olá Mundo :

Console.Write("olá ");
            Console.WriteLine("mundo !");
            Console.Write("Entre com seu nome: ");
            string nome  = Console.ReadLine();
            Console.Write("Bom dia, ");
            Console.Write(nome);
            Console.WriteLine("!");

Programação - Soma :

double num1, num2, soma;
            num1 = double.Parse(Console.ReadLine());
            num2 = double.Parse(Console.ReadLine());
            soma = num1 + num2;
            Console.WriteLine(soma);
            
           Programção - Valor da Area do Quadrado :
           
           double num1, mult;
            Console.Write(" digite o valor do lado do quadrado: ");
            num1 = double.Parse(Console.ReadLine());
            mult = num1 * num1;
            Console.WriteLine(mult);

Programação - Valor da area do Trapezio :

double num1, num2, num3, valor;
            Console.Write(" Valor do lado do Trapezio: ");
            num1 = double.Parse(Console.ReadLine());
            num2 = double.Parse(Console.ReadLine());
            num3 = double.Parse(Console.ReadLine());
            valor = num1 + num2 * num3 / 2;
            Console.WriteLine(valor);
